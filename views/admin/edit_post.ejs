<%- include('./header.ejs') %>
<style>
     #gg {
            margin-top: 100px;
            margin-left: 300px;
        }

        .container {
            margin-top: 300px;
            margin-left: 300px;
        }
</style>
<div class="container-fluid">
    <form method="POST" onsubmit="return doEditPost(this);" id="gg">
        <div class="form-inline">
            <label>Title</label>
            <input name="title" class="form-control" placeholder="Title" value="<%= post.title %>">
        </div> 
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
            Upload File
        </button>      
        <div class="form-inline">
            <label>Content</label>
            <textarea name="content" class="form-control" placeholder="Content"><%= post.content %></textarea>
        </div>
        <div class="form-inline">
            <label for="tag">Choose a tag:</label>
            <select id="tag" name="tag">
              <option value="PLACE">PLACE</option>
              <option value="GAME">GAME</option>
              <option value="FOOD">FOOD</option>
              <option value="PEOPLE">PEOPLE</option>
            </select>
        </div>

        <input type="submit" class="btn-link" value="Edit">
    </form>
</div>
<script>
    var postId = '<%= post._id %>';
    var image = '<%= post.image %>';
    function doEditPost(form) {
        var formData = { 
            title: form.title.value, 
            content: form.content.value, 
            date:new Date() ,
            image:image ,
            tag : form.tag.value,             
            _id : postId};
        $.ajax({
            url: "/do-edit-post",
            method: "POST",
            data: formData,
            success: function (response) {                
                alert(response);                                  
            }
        });
        return false;
    }
    
</script>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    Ã—
                </button>

                <h4 class="modal-title" id="myModalLabel">
                    Upload Image
                </h4>
            </div>

            <div class="modal-body">
                <form method="POST" enctype="multipart/form-data" id="form-upload">
                    <input type="hidden" name="image" value="<%= post.image %>">
                    <div class="form-control">
                        <input type="file" name="file" class="form-control">
                    </div>
                    <input type="submit" class="btn-primary" value="Upload">
                </form>
            </div>


        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->

</div><!-- /.modal -->
<script>
    var image = "";
    $("#form-upload").on("submit", function (e) {
        e.preventDefault();
        console.log("here");
        $.ajax({
            url: "/do-update-image",
            method: "POST",
            data: new FormData(this),
            contentType: false,
            cache: false,
            processData: false,
            success: function (response) {
                image = response;
                $("#myModal").removeClass("in");
                $(".modal-backdrop").remove();
                $('body').removeClass('modal-open');
                $('body').css('padding-right', '');
                $("#myModal").hide();
            }
        });
    });
</script>
